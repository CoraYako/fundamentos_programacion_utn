Proceso ejercicio2_case2a
	// Area = PI*r²
	// Circunferencia = 2*PI*r
	Definir r, area, long Como Real;
	Escribir Sin Saltar "Ingrese el radio del círculo:";
	Leer r;
	area <- PI * r^2;
	long <- 2 * PI * r;
	Escribir "El área del circulo según el radio ingresado es de ", area;
	Escribir "Y la longitud es de ", long;
FinProceso
